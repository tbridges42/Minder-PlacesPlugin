<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map_frame"
        android:focusable="true" android:focusableInTouchMode="true"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/map_frame"
        android:id="@+id/info_container"
        android:orientation="vertical"
        android:focusable="true" android:focusableInTouchMode="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_container"
            android:background="#ffd3d3d3">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/ok"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:duplicateParentState="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:text="Test"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_less_black_18dp"
                    android:id="@+id/drawer_indicator"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/cancel"
                android:text="Cancel"
                android:duplicateParentState="false"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/detail_view"
            android:background="#ffd3d3d3">
            <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
            <LinearLayout
                android:focusable="true" android:focusableInTouchMode="true"
                android:layout_width="0px" android:layout_height="0px"
                tools:ignore="UselessLeaf"/>
            <EditText
                android:inputType="text"
                android:hint="Name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_view_name"
                android:nextFocusUp="@id/detail_view_name"
                android:nextFocusLeft="@id/detail_view_name"/>
            <EditText
                android:inputType="text"
                android:hint="Description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_view_description"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>